<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="40dp"
        android:text="Book a ride"/>

    <EditText
        android:id="@+id/fromField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="From: "
        android:inputType="text"
        android:backgroundTint="@color/editTextColor"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/editTextColor"/>

    <EditText
        android:id="@+id/toField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To: "
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/editTextColor"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/editTextColor"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/timeField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"

            android:hint="At: "
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/editTextColor"
            android:textColor="@color/white"
            android:textCursorDrawable="@color/editTextColor"/>

        <EditText
            android:id="@+id/dateField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"

            android:hint="On Date: "
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/editTextColor"
            android:textColor="@color/white"
            android:textCursorDrawable="@color/editTextColor"/>

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:onClick="clickTripBookingFormButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/editTextColor"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

</LinearLayout>

